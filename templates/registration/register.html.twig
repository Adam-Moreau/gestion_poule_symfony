{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-3 boxRegister p-4">
                <h1 class="h3 mb-3 font-weight-normal">Register</h1>

                {{ form_start(registrationForm) }}
                    <div class="textReg"> {{ form_row(registrationForm.username) }}</div>
                   
                    <div class="textReg"> {{ form_row(registrationForm.mail_user) }}</div>
                    <div class="textReg"> {{ form_row(registrationForm.plainPassword.first, {
                        label: 'Password'
                    }) }}</div>
                    <div class="textReg"> {{ form_row(registrationForm.plainPassword.second, {
                        label: 'Repeat Password'   
                    }) }}</div>
                    <div class="textReg"> {{ form_row(registrationForm.agreeTerms) }} </div>

                    <button type="submit" class="btn btn-lg shadow-none buttonReg">Register</button>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
    
    
    
{% endblock %}
